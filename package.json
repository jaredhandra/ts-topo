{
  "name": "ts-topo",
  "displayName": "ts-topo",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        { "id": "tsTopo", "title": "TS-Topo", "icon": "resources/icon.svg" }
      ]
    },
    "views": {
      "tsTopo": [
        {"id": "tsTopoTreeView", "name": "Map View", "icon": "resources/icon.svg", "type": "tree"}
      ]
    },
    "commands": [
      {
        "command": "ts-topo.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ts-topo.refresh", "title": "Refresh TS Topo"
      },
      {
        "command": "ts-topo.openView", "title": "Open TS Topo View"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}
